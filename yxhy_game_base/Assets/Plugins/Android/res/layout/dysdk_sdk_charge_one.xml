<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_charge"
    android:background="@drawable/dysdk_sdk_dialog_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/dysdk_sdk_toolbar_bg" >

        <ImageView
            android:id="@+id/iv_ingame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/dysdk_sdk_charge_help" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_charge_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值中心"
                android:textColor="@color/dysdk_ui_white"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher Center"
                android:textColor="@color/dysdk_ui_gray_light"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:src="@drawable/dysdk_float_ic_action_cancel" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_cz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_pay_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值账号:"
                android:textColor="@color/dysdk_ui_gray_dark" />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/tv_pay_user"
                android:text="charly123"
                android:textColor="@color/dysdk_ui_orange" />
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/tv_pay_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="充值金额: "
                android:textColor="@color/dysdk_ui_gray_dark" />
            
            <TextView
                android:id="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_pay_money"
                android:background="@drawable/dysdk_sdk_orange_stroke"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="50元"
                android:textColor="@color/dysdk_ui_orange" />

        </RelativeLayout>
        
        <TextView
                android:id="@+id/tv_discounted_price_chargeview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:text="实际金额:"
                android:textColor="@color/dysdk_red"
                android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/tv_checkpay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值方式:"
                android:textColor="@color/dysdk_ui_gray_dark" />

            <GridView
                android:id="@+id/gv_pay_sort"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="5dp"
                android:layout_below="@+id/tv_checkpay"
                android:cacheColorHint="@color/dysdk_ui_transparent"
                android:fadingEdge="none"
                android:horizontalSpacing="0dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="0dp" >
            </GridView>
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_goto_pay"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dysdk_sdk_orange_btn_bg"
        android:paddingLeft="65dp"
        android:paddingRight="65dp"
        android:text="立即付款"
        android:textColor="@color/dysdk_white" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dysdk_sdk_dialog_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/dysdk_sdk_toolbar_bg" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/dysdk_sdk_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_charge_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值中心"
                android:textColor="@color/dysdk_ui_white"
                android:textSize="23sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher Center"
                android:textColor="@color/dysdk_ui_gray_light"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_margin="15dp"
            android:src="@drawable/dysdk_float_ic_action_cancel" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp" >

        <TextView
            android:id="@+id/tv_pay_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值账号:"
            android:textColor="@color/dysdk_ui_gray_dark" />

        <TextView
            android:id="@+id/tv_ptb_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/tv_pay_user"
            android:text="charly123"
            android:textColor="@color/dysdk_ui_orange" />

    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_marginTop="15dp" >
        
        <TextView
            android:id="@+id/tv_pay_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值金额:"
            android:textColor="@color/dysdk_ui_gray_dark" />

        <TextView
            android:id="@+id/tv_ptb_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_pay_money"
            android:text="50元"
            android:textColor="@color/dysdk_ui_orange"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/tv_db_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_ptb_money"
            android:gravity="center"
            android:text="(50逗币)"
            android:textColor="@color/dysdk_ui_orange" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:background="@color/dysdk_ui_gray_light" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp" >

        <TextView
            android:id="@+id/tv_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付余额:"
            android:textColor="@color/dysdk_ui_gray_dark" />

        <TextView
            android:id="@+id/tv_ttb_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/tv_balance"
            android:text="0.50"
            android:textColor="@color/dysdk_ui_orange"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ttb_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tv_balance"
            android:text="(1人民币=1逗币)"
            android:textColor="@color/dysdk_ui_gray" />

        <TextView
            android:id="@+id/tv_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dysdk_sdk_green_btn_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="刷新"
            android:textColor="@color/dysdk_white" />
    </RelativeLayout>

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/btn_pay"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/dysdk_sdk_orange_btn_bg"
        android:paddingLeft="65dp"
        android:paddingRight="65dp"
        android:text="立即付款"
        android:textColor="@color/dysdk_white" />

</LinearLayout>
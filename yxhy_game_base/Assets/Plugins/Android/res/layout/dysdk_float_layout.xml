<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/float_view_height" >

    <LinearLayout
        android:id="@+id/item_lay"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/float_view_height"
            android:maxWidth="@dimen/float_view_height"
            android:src="@drawable/dysdk_float_foot_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/dysdk_float_body_bg"
            android:gravity="center_vertical"
            android:maxHeight="@dimen/float_view_height"
            android:maxWidth="@dimen/float_view_height"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/menu_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/float_item_user_out"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/dysdk_float_close_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/dysdk_btn_userout"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/float_min_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/float_item_bbs_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/dysdk_float_bbs_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/dysdk_btn_bbs"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/float_min_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/float_item_server_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/dysdk_float_server_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/dysdk_btn_server"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/float_min_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/float_item_gift_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/iv_gift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/dysdk_float_gift_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/dysdk_btn_gift"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/float_min_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/float_item_user_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="15dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/dysdk_float_user_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/dysdk_btn_user"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/float_min_font" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/float_item_id"
            android:layout_width="@dimen/float_view_height"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:adjustViewBounds="true"
            android:background="@drawable/dysdk_floating_view_back_rihgt"
            android:maxHeight="@dimen/float_view_height"
            android:maxWidth="@dimen/float_view_height" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/r_item_lay"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/r_float_item_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/dysdk_float_r_head_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/dysdk_float_body_bg"
            android:gravity="center_vertical"
            android:maxHeight="@dimen/float_view_height"
            android:maxWidth="@dimen/float_view_height"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/r_menu_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/r_float_item_user_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/dysdk_float_user_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/dysdk_btn_user"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/float_min_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r_float_item_gift_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/r_iv_gift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/dysdk_float_gift_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/dysdk_btn_gift"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/float_min_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r_float_item_server_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/dysdk_float_server_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/dysdk_btn_server"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/float_min_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r_float_item_bbs_lay"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="18dp"
                    android:background="#00000000"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/dysdk_float_bbs_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/dysdk_btn_bbs"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/float_min_font" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/r_float_item_user_out"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:background="#00000000"
                    android:layout_marginLeft="18dp"
                    android:layout_marginRight="15dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="20dp"
                        android:maxWidth="20dp"
                        android:src="@drawable/dysdk_float_close_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/dysdk_btn_userout"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/float_min_font" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:adjustViewBounds="true"
            android:maxHeight="@dimen/float_view_height"
            android:maxWidth="@dimen/float_view_height"
            android:src="@drawable/dysdk_float_r_foot_bg" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_float"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/float_view_height"
        android:layout_alignLeft="@id/r_item_lay"
        android:layout_alignRight="@id/item_lay"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:maxWidth="58dp"
        android:src="@drawable/dysdk_fload"
        android:visibility="visible" />

</RelativeLayout>
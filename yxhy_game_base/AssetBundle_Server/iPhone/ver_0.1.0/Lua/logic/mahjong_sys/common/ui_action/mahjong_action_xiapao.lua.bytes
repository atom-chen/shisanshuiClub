local base = require "logic/mahjong_sys/common/mahjong_action_base"
local mahjong_action_xiapao = class("mahjong_action_xiapao", base)

function mahjong_action_xiapao:Execute(tbl)
	local viewSeat = self.gvblFun(tbl["_src"])
	local value = tbl._para[tbl["_src"]]
	if viewSeat == 1 then
		mahjong_ui:HideXiaPao()
	end
	if value == 0 then
		mahjong_ui:UpdateXiaPaoState(viewSeat,4)
	else
		mahjong_ui:UpdateXiaPaoState(viewSeat,3)
	end
end

return mahjong_action_xiapao